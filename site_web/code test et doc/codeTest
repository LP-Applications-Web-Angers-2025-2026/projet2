<?php

    $lines = file("C:\Users\perod\Downloads\projet_l3pro\projet_l3pro\Programmation_Assembleur_x86_32_et_64_bits_sous_Linux_Ubuntu.pdf", FILE_IGNORE_NEW_LINES);
    $search = "Compter les voyelles 15.1 Introduction";
    $result = [];

    foreach ($lines as $index => $line) {
        echo ("test après boucle foreach");
        if (strpos($line, $search) !== false) {
            echo ("test après if");
            // Ajouter la ligne trouvée + les 6 suivantes
            for ($i = 0; $i <= 6; $i++) {
                if (isset($lines[$index + $i])) {
                    echo ("ligne :" + $i +"\n");
                    $result[] = $lines[$index + $i];
                }
            }
            break; // arrêter après la première occurrence
        }
    }
    print_r($result);
